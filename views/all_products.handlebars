

<div class="row products">

    <div class="col-xs-12 col-md-3 cat-options">
        <h3>Categories</h3>
        <ul class="list-group">
            <li class="list-group-item">
                <a href="/products">All products</a>
            </li>
            <!-- loop through categories and link to category -->
            {{#each categories}}
            <!-- pull slug and title for li and href -->
            <li class="list-group-item">
                <a href="/products/{{this.slug}}">
                    {{this.title}}
                </a>
            </li>
            {{/each}}
        </ul>
    </div>
    <!--<div class="col-xs-12 col-md-1"></div>-->
    
    <!-- loop through all products - p -->
    <!-- for each product create a div and present product info and image -->
    {{#each products}}
        <div class="col-xs-12 col-md-4 p">
            <a class="pa" href="/products/{{this.category}}/{{this.slug}}">
                {{#ifCond this.image '==' "" }}
                <img id="pimage" src="/images/noimage.png" width="150" height="150">
                {{else}}
                <img class="pimage" src="/product_images/{{this.id}}/{{this.image}}" alt="">
                {{/ifCond}}
                
            </a>
            <h3>{{this.title}}</h3>
            <h4>${{toFixed this.price}}</h4>
            <a class="vd btn btn-secondary" href="/products/{{this.category}}/{{this.slug}}">View Details</a>
        </div>
    {{/each}}
    
        
</div>

