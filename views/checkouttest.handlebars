<div class="col-xs-12 col-md-3">
    <h3>Categories</h3>
    <ul class="list-group">
        <li class="list-group-item">
            <a href="/products">All products</a>
        </li>
        <!-- loop through categories and link to category -->
        {{#each categories}}
        <!-- pull slug and title for li and href -->
        <li class="list-group-item">
            <a href="/products/{{this.slug}}">
                {{this.title}}
            </a>
        </li>
        {{/each}}
    </ul>
</div>

<div class="col-xs-12 col-md-9">

    {{#if cart}}
    <h3>{{title}}</h3>

    <div class = "Table">
            <div class = "Row">
                <p class = "Cell">Image</p>
                <p class = "Cell">Title</p>
                <p class = "Cell">Price</p>
                <p class = "Cell">Quantity</p>
                <p class = "Cell"></p>
                <p class = "Cell">Subtotal</p>
                
            </div>
            
        </div>

    <form class = "Table">
            <div class = "Row">
                <label class = "Cell" for = "Name">Name</label>
                <input id = "Name" class = "Cell" type = "text">
            </div>
            <div class = "Row">
                <label class = "Cell" for = "Birthplace">Birthplace</label>
                <input id = "Birthplace" class = "Cell" type = "text">
            </div>
            <div class = "Row">
                <label class = "Cell" for = "Newsletter">Subscribe to newsletter?</label>
                <input id = "Newsletter" class = "Cell" type = "checkbox" checked>
        </form>

    {{else}}

    <h3 class="text-center">Your Cart is Empty</h3>

    {{/if}}
</div>
<script>
    $(function () {

        $('a.clearcart').on('click', function () {
            if (!confirm('Confirm clear cart'))
                return false;
        });



    });

</script>



