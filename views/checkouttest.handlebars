            <a href="/cart/update/{{this.title}}?action=clear">Clear</a>&nbsp;
        </td>
        <td class="total-p">${{toFixed (sub this.qty this.price)}}</td>

        <td>{{total}}</td>
    </tr>
    {{/each}}
    <tr>
        <td colspan="5" align="right">
            <a class="btn btn-danger" href="/cart/clear">Clear cart</a>
        </td>
        <td colspan="5" align="right">
            <a class="btn btn-success buynow" href="/cart/buy">Buy</a>
