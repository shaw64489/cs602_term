        <th>Title</th>
        <th>Price</th>
        <th>Quantity</th>
        <th></th>
        <th>Subtotal</th>
    </tr>

    {{#each cart}}

    <tr>
        <td><img class="cpi" src="{{this.image}}"></td>
        <td>{{this.title}}</td>
        <td>${{this.price}}</td>
        <td class="total-q">{{this.qty}}</td>
        
