<!-- pull in global categories -->
<div class="row">
    
    <div class="col-xs-12 col-md-3">
        <h3>Categories</h3>
        <ul class="list-group">
            <li class="list-group-item">
                <a href="/products">All products</a>
            </li>
            <!-- loop through categories and link to category -->
            {{#each categories}}
            <!-- pull slug and title for li and href -->
            <li class="list-group-item">
                <a href="/products/{{this.slug}}">
                    {{this.title}}
                </a>
            </li>
            {{/each}}
        </ul>
    </div>

    

    <div class="col-xs-12 col-md-2"></div>
    
    <div class="col-xs-12 col-md-6">
        <h2>Search</h2>
        <form class="search" method="post" action="/categories/search/" enctype="multipart/form-data">

            <div class="form-group search">
                <label for="">Search Product</label>
                <input type="text" class="form-control" name="product" placeholder="Product Name">
            </div>
            <div class="form-group search">
                <button class="btn btn-default">Submit</button>
            </div>
             
        </form>
    </div>
</div>